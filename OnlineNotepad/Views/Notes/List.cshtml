@model IEnumerable<Note>
@{
    string currentUserId = (string)ViewData["UserMassage"];
}
<div class="activebuttons">
    <a asp-action="CreateNote" asp-controller="Notes" class="btn btn-light btn-lg btn_blue">
        Создать заметку
    </a>
    <button type="button" class="btn btn-secondary btn-lg">
        Удалить
    </button>
</div>
@foreach (var p in Model.Reverse())
{
    if (p.UserId == currentUserId)
    {
        <div class="buttonsfornote">
            <a asp-controller="Notes" asp-action="EditNote" asp-route-noteId="@p.Id" class ="btn btn-nones" >    
                <div class="btn__container">
                    <div class="btn__body">
                        <div class="btn__text" id="note_name">@p.Name</div>
                        <div class="btn__date">@p.DateOfCreation</div>
                    </div>
                </div>
            </a>
        </div>
    }
}