@model OnlineNotepad.Models.RegisterViewModel

<link rel="stylesheet" href="~/css/LogStyle.css">
<div class="container">
    <section id="content">
        <form method="post" asp-controller="Account" asp-action="Register">
            <h1>Регистрация</h1>
            <div class="errorMassages">
                <span asp-validation-for="Password" class="text-danger">
                </span>
                <span asp-validation-for="Email" class="text-danger">
                </span>
                <span asp-validation-for="PasswordConfirm" class="text-danger">
                </span>
            </div>
            <div>
                <div>
                    <input asp-for="Email" asp-validation-for="Email" type="text" placeholder="адресс электронной почты" required="" id="username" />
                </div>
                <div>
                    <input asp-for="Password" asp-validation-for="Password" type="password" placeholder="пароль" required="" id="password" />
                </div>
                <div>
                    <input asp-for="PasswordConfirm" asp-validation-for="PasswordConfirm" type="password" placeholder="подтвердить пароль" required="" id="password" />
                </div>
                <div class="inputButton">
                    <input type="submit" value="Зарегистрироваться" style="height:40px; width:290px" />
                </div>
            </div>
        </form><!-- form -->
    </section><!-- content -->
</div><!-- container -->
<style>
    .errorMassages {
        margin-top: -10px;
        margin-bottom: 20px;
    }
    .inputButton {
        margin-left: 20px;
        margin-top: -10px;
    }
</style>